            <TextBox Margin="25,5,25,5" FontSize="15"  Name="tb4"/>                                                                            
            <Image Height="250" Width="250" Source="{Binding Path=ImagePath}" Name="image" />
            

                <Button Content="Add " Margin="225,1,225,1" Click="Button_Click4" Height="50" Width="300" FontSize="20"/>

